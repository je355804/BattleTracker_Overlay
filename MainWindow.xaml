<Window x:Class="BattleTrackerOverlay.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:BattleTrackerOverlay"
        mc:Ignorable="d"
        Title="BattleTracker" Width="950" Height="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="CanResize"
        UseLayoutRounding="True"> <Window.Resources>
        <Style x:Key="CollapsedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Grid Width="{TemplateBinding Width}"
                                                            Height="{TemplateBinding Height}"
                                                            ClipToBounds="True">
                                                        <Ellipse Fill="#FF000000"
                                                                         Width="{TemplateBinding Width}"
                                                                         Height="{TemplateBinding Height}"
                                                                         Stretch="Fill"/>
                                                        <Viewbox Margin="0"
                                                                         Stretch="Uniform"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center">
                                                                <Image x:Name="Icon"
                                                                             Source="pack://application:,,,/BattleTrackerOverlay;component/Assets/BT_LOGO.png"
                                                                             RenderOptions.BitmapScalingMode="HighQuality"
                                                                             SnapsToDevicePixels="True"/>
                                                        </Viewbox>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Icon" Property="Source" Value="pack://application:,,,/BattleTrackerOverlay;component/Assets/BT_LOGO.png" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CompactTabRadioStyle" TargetType="RadioButton">
            <Setter Property="GroupName" Value="CompactTabs"/>
            <Setter Property="Foreground" Value="{StaticResource DimText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Root"
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="10,4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#44FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#22FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#66FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource DimText}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <Grid x:Name="Root" Background="Transparent">
        <Border x:Name="ExpandedPanel"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="25"
                Background="{StaticResource Panel}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="3"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="2" Opacity="0.7"/>
            </Border.Effect>

            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="24"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource PanelAlt}" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Text area with drag functionality -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0"
                                   MouseLeftButtonDown="DragArea_MouseLeftButtonDown"
                                   MouseLeftButtonUp="DragArea_MouseLeftButtonUp"
                                   MouseMove="DragArea_MouseMove"
                                   Background="Transparent" Cursor="Hand">
                            <TextBlock Text="BattleTrackerv4" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text=" • " FontSize="12" Margin="6,0"/>
                            <TextBlock x:Name="HeaderScopeLabel" Foreground="{StaticResource DimText}" FontSize="12"/>
                            <TextBlock Text="{Binding ErrorBanner}" Foreground="#FFB366" Margin="12,0,0,0" FontSize="12"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0" >
                            <Button Style="{StaticResource IconButton}" Click="Gear_Click" ToolTip="Settings">
                                <Image Source="pack://application:,,,/BattleTrackerOverlay;component/Assets/GEAR.png" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Click="Minimize_Click" ToolTip="Collapse" Margin="4,0,0,0">
                                <Image Source="pack://application:,,,/BattleTrackerOverlay;component/Assets/minimize.png" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Click="Close_Click" ToolTip="Close" Margin="4,0,0,0">
                                <Image Source="pack://application:,,,/BattleTrackerOverlay;component/Assets/x.png" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Margin="0,10">
                    <TabControl x:Name="Tabs" BorderThickness="0" Background="Transparent"
                                SelectionChanged="Tabs_SelectionChanged">
                        
                        <TabControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </TabControl.ItemsPanel>

                        <TabItem x:Name="TabCumulative" Tag="{x:Static local:StatScope.Cumulative}">
                            <TabItem.Header>
                                <Image Source="pack://application:,,,/BattleTrackerOverlay;component/Assets/Cumulative.png" ToolTip="Cumulative" Width="32" Height="32" Stretch="Uniform"/>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem x:Name="TabCurrentFight" Tag="{x:Static local:StatScope.CurrentCombat}">
                            <TabItem.Header>
                                <Image Source="pack://application:,,,/BattleTrackerOverlay;component/Assets/current_battle.png" ToolTip="Current Fight" Width="32" Height="32" Stretch="Uniform"/>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem x:Name="TabCurrentLevel" Tag="{x:Static local:StatScope.CurrentLevel}">
                            <TabItem.Header>
                                <Image Source="pack://application:,,,/BattleTrackerOverlay;component/Assets/Level.png" ToolTip="Current Level" Width="32" Height="32" Stretch="Uniform"/>
                            </TabItem.Header>
                        </TabItem>
                    </TabControl>
                </Grid>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="TablesHost" />
                </ScrollViewer>

                
            </Grid>
        </Border>

        <!-- Collapsed mode container -->
        <Grid x:Name="CollapsedContainer" Width="100" Height="100" Visibility="Visible">
            <!-- Main expand button -->
        <Button x:Name="ShowPanelButton"
            Style="{StaticResource CollapsedButtonStyle}"
            Width="100" Height="100"
            PreviewMouseLeftButtonDown="ShowPanelButton_PreviewMouseLeftButtonDown"
            PreviewMouseMove="ShowPanelButton_PreviewMouseMove"
            PreviewMouseLeftButtonUp="ShowPanelButton_PreviewMouseLeftButtonUp"
            LostMouseCapture="ShowPanelButton_LostMouseCapture">
                <Button.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="10" Opacity="0.5"/>
                </Button.Effect>
            </Button>
            
            <!-- Small drag handle in top-left, positioned outside the main circle -->
            <Border Width="12" Height="12" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Background="{StaticResource Accent}" 
                    CornerRadius="6" 
                    Cursor="Hand"
                    Margin="-16,-16,0,0"
                    MouseLeftButtonDown="DragHandle_MouseLeftButtonDown"
                    MouseLeftButtonUp="DragHandle_MouseLeftButtonUp"
                    MouseMove="DragHandle_MouseMove">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="1" BlurRadius="3" Opacity="0.7"/>
                </Border.Effect>
            </Border>
        </Grid>

    </Grid>
</Window>
